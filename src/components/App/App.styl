/**
 * App
 */

.container
	margin 0 auto
	padding 4rem
	width 100%
	max-width 50rem

	@media screen and (max-width: 600px)
		padding 3rem

.filters
	padding 2rem 0
	display grid
	grid-gap 2.5rem
	grid-template-columns repeat(auto-fit,minmax(130px,1fr))
	border-bottom 1px solid var(--color_01)
	margin-bottom 2em

	> div
		min-width 0

	@media screen and (max-width: 600px)
		grid-template-columns 1fr 1fr
