/**
 * Pagination
 */

.container
	padding-top 2em
	border-top 1px solid var(--color_01)
	margin-top 2em

	span
		margin-right .7em

.button

	&
	&:hover
		text-transform uppercase
		letter-spacing .05em
		line-height 2
		padding 0 .6em
		margin 0 .2em
		font-size .9em
		border-radius .1em
		background-color var(--color_01)
		transition background-color .15s var(--ease)


	&[disabled]
		background-color transparent
		opacity .3
		cursor default
