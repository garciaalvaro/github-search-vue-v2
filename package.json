{
	"name": "github-search-vue-v2",
	"version": "1.0.3",
	"description": "Small app to search GitHub repositories",
	"main": "server.js",
	"author": "Alvaro Garcia",
	"license": "MIT",
	"private": true,
	"scripts": {
		"start": "npm run dev",
		"prebuild": "npm run clean:dist && npm run test:types",
		"build": "webpack --mode=production",
		"clean:dist": "rm -rf dist",
		"predev": "npm run clean:dist",
		"dev": "webpack --mode=development & npm run serve:dev",
		"test": "npm run test:types && npm run test:lint && npm run test:prettier",
		"test:types": "tsc",
		"test:lint": "eslint \"**/*.{js,ts,vue}\"",
		"test:prettier": "prettier --check \"**/*.{js,ts,vue,json,html,md}\"",
		"prettier": "prettier --write \"**/*.{js,ts,vue,json,html,md}\"",
		"test:unit": "jest",
		"test:unit:watch": "jest --watch",
		"docker": "docker-compose up -d",
		"docker:recreate": "docker-compose down && docker-compose build --no-cache && docker-compose up",
		"docker:start": "npm run build && npm run serve:docker",
		"docker:stop": "docker-compose down",
		"serve": "pm2 start server.js --name github-search-vue-v2",
		"serve:stop": "pm2 stop github-search-vue-v2",
		"serve:dev": "pm2-dev start server.js",
		"serve:docker": "pm2-runtime start server.js --name github-search-vue-v2",
		"predeploy": "npm run build",
		"deploy": "USE_BASE_URL=\"yes\" gh-pages -d dist"
	},
	"dependencies": {
		"@babel/core": "^7.13.15",
		"@babel/plugin-transform-runtime": "^7.13.15",
		"@babel/preset-env": "^7.13.15",
		"@babel/preset-typescript": "^7.13.0",
		"@babel/register": "^7.13.14",
		"@babel/runtime": "^7.13.10",
		"@types/jest": "^26.0.22",
		"babel-loader": "^8.2.2",
		"core-js": "^3.10.1",
		"css-loader": "^5.2.1",
		"css-minimizer-webpack-plugin": "^1.3.0",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"html-webpack-plugin": "^5.3.1",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.3",
		"mini-css-extract-plugin": "^1.4.1",
		"nib": "^1.1.2",
		"pm2": "^4.5.6",
		"postcss-loader": "^5.2.0",
		"postcss-preset-env": "^6.7.0",
		"stylus": "^0.54.8",
		"stylus-loader": "^5.0.0",
		"terser-webpack-plugin": "^5.1.1",
		"typescript": "^4.2.4",
		"vue": "^2.6.12",
		"vue-loader": "^15.9.6",
		"vue-template-compiler": "^2.6.12",
		"webpack": "^5.31.2",
		"webpack-cli": "^4.6.0"
	},
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^4.21.0",
		"@typescript-eslint/parser": "^4.21.0",
		"@vue/eslint-config-typescript": "^7.0.0",
		"eslint": "^7.24.0",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.3.1",
		"eslint-plugin-vue": "^7.8.0",
		"gh-pages": "^3.1.0",
		"prettier": "^2.2.1",
		"vue-eslint-parser": "^7.6.0"
	}
}
